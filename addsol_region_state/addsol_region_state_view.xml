<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <menuitem sequence="150" id="menu_pharma_root" name="Pharma" groups="base.group_user"/>
        <menuitem id="menu_pharma_config" parent="menu_pharma_root" name="Configuration" sequence="100" />

        <record model="ir.ui.view" id="addsol_region_state_view_form">
            <field name="name">addsol.region.state.view.form</field>
            <field name="model">addsol.region.state</field>
            <field name="arch" type="xml">
                <form string="Region">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="state_id"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name='internal_notes' string="Internal Notes">
                                <field name="comment" placeholder="Put an internal note..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="addsol_region_state_view_tree">
            <field name="name">addsol.region.state.view.tree</field>
            <field name="model">addsol.region.state</field>
            <field name="arch" type="xml">
                <tree string="Region">
                    <field name="name"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>
        
        <record id="open_view_addsol_region_state" model="ir.actions.act_window">
            <field name="name">Region</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">addsol.region.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Region" action="open_view_addsol_region_state" id="menu_open_view_addsol_region_state" parent="menu_pharma_config" sequence="3"/>


        <!-- Doctor Qualification -->

        <record model="ir.ui.view" id="addsol_dr_qualification_view_form">
            <field name="name">addsol.dr.qualification.view.form</field>
            <field name="model">dr.qualification</field>
            <field name="arch" type="xml">
                <form string="Qualification">
                    <group col="4">
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="addsol_dr_qualification_view_tree">
            <field name="name">addsol.dr.qualification.view.tree</field>
            <field name="model">dr.qualification</field>
            <field name="arch" type="xml">
                <tree string="Qualification">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="open_view_addsol_dr_qualification" model="ir.actions.act_window">
            <field name="name">Qualification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dr.qualification</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--Qualification End -->


        <!-- Doctor Speciality -->

        <record model="ir.ui.view" id="addsol_dr_speciality_view_form">
            <field name="name">addsol.dr.speciality.view.form</field>
            <field name="model">dr.speciality</field>
            <field name="arch" type="xml">
                <form string="Speciality">
                    <group col="4">
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="addsol_dr_speciality_view_tree">
            <field name="name">addsol.dr.speciality.view.tree</field>
            <field name="model">dr.speciality</field>
            <field name="arch" type="xml">
                <tree string="Speciality">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="open_view_addsol_dr_speciality" model="ir.actions.act_window">
            <field name="name">Speciality</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dr.speciality</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Speciality End -->

        <menuitem name="Qualification" action="open_view_addsol_dr_qualification" id="menu_open_view_addsol_dr_qualification" parent="menu_pharma_config" sequence="1"/>
        <menuitem name="Speciality" action="open_view_addsol_dr_speciality" id="menu_open_view_addsol_dr_speciality" parent="menu_pharma_config" sequence="2"/>

    
        <!-- Inherit Product Template -->
        <record id="view_product_template_inherit" model="ir.ui.view">
            <field name="name">product.template.addsol.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <div>
                        <field name="promotional_material"/>
                        <label for="promotional_material"/>
                    </div>
                    <div>
                        <field name="brochure"/>
                        <label for="brochure"/>
                    </div>
                    <div>
                        <field name="catalogs"/>
                        <label for="catalogs"/>
                    </div>
                </div>
            </field>
        </record>

        <!-- End-->

        <!-- Inherit User form -->
        <record id="addsol_res_users_view_form" model="ir.ui.view">
            <field name="name">addsol.res.users.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/group/group/field[@name='action_id']" position="after">
                    <field name="region_id"/>
                </xpath>
            </field>
        </record>
        

        <!-- End -->

        <!-- Inherit Buisness Partner -->
        <record id="addsol_res_partner_view_form" model="ir.ui.view">
            <field name="name">addsol.res.partner.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/group/group/field[@name='supplier']" position="after">
                    <field name="superstockist"/>
                    <field name="stockist"/>
                    <field name="chemist"/>
                    <field name="doctor"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='sales_purchases']" position="after">
                    <page string="Qualification" attrs="{'invisible': [('doctor','!=',True)] }">
                        <field name="qual_ids" nolabel="1"/>
                    </page>
                    <page string="Speciality" attrs="{'invisible': [('doctor','!=',True)] }">
                        <field name="spec_ids" nolabel="1"/>
                    </page>
                    <page string="Region" attrs="{'invisible': [('doctor','!=',True), ('stockist','!=',True), ('chemist','!=',True), ('superstockist','!=',True)] }">
                        <field name="region_ids" nolabel="1"/>
                    </page>
                </xpath>
            </field>
        </record>
        <!--End-->

        <!-- Doctor to Chemist mapping -->

        <record id="doctor_chemist_mapping_view_form" model="ir.ui.view" >
            <field name="name">doctor.chemist.mapping.view.form</field>
            <field name="model">doctor.chemist.mapping</field>
            <field name="arch" type="xml">
                <form string="Doctor Chemist Mapping">
                    <sheet>
                        <group>
                            <field name="dr_partner_id" required="1"  domain="[('doctor', '=', True)]"/>
                        </group>
                        <notebook>
                            <page string="Chemist">
                                <field name="doctor_chemist_mapping_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="chemist_partner_id" nolabel="1" context="{'default_chemist': 1, 'partner_id': parent.dr_partner_id }"
                                                domain="[('chemist', '=', True)]"/>
                                        <field name="preferred_flag"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="doctor_chemist_mapping_view_tree" model="ir.ui.view" >
            <field name="name">doctor.chemist.mapping.view.tree</field>
            <field name="model">doctor.chemist.mapping</field>
            <field name="arch" type="xml">
                <tree string="Doctor To Chemist Mapping">
                    <field name="dr_partner_id"/>
                </tree>
            </field>
        </record>

        <record id="open_view_doctor_chemist_mapping" model="ir.actions.act_window">
            <field name="name">Doctor Chemist Mapping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">doctor.chemist.mapping</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Doctor Chemist Mapping" action="open_view_doctor_chemist_mapping" id="menu_open_view_doctor_chemist_mapping" parent="menu_pharma_config" sequence="4"/>
        <!-- End -->

        <!-- Stockist to Chemist mapping -->

        <record id="stockist_chemist_mapping_view_form" model="ir.ui.view" >
            <field name="name">stockist.chemist.mapping.view.form</field>
            <field name="model">stockist.chemist.mapping</field>
            <field name="arch" type="xml">
                <form string="Stockist Chemist Mapping">
                    <sheet>
                        <group>
                            <field name="stockist_partner_id" required="1"  domain="[('stockist', '=', True)]" />
                        </group>
                        <notebook>
                            <page string="Chemist">
                                <field name="stockist_chemist_mapping_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="chemist_partner_id" nolabel="1" context="{'default_chemist': 1, 'partner_id': parent.stockist_partner_id}"
                                                domain="[('chemist', '=', True)]"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="stockist_chemist_mapping_view_tree" model="ir.ui.view" >
            <field name="name">stockist.chemist.mapping.view.tree</field>
            <field name="model">stockist.chemist.mapping</field>
            <field name="arch" type="xml">
                <tree string="Stockist Chemist Mapping">
                    <field name="stockist_partner_id"/>
                </tree>
            </field>
        </record>

        <record id="open_view_stockist_chemist_mapping" model="ir.actions.act_window">
            <field name="name">Stockist Chemist Mapping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stockist.chemist.mapping</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Stockist Chemist Mapping" action="open_view_stockist_chemist_mapping" id="menu_open_view_stockist_chemist_mapping" parent="menu_pharma_config" sequence="5"/>
        <!-- End -->


        <!-- SuperStockist to Stockist mapping -->

        <record id="super_stockist_mapping_view_form" model="ir.ui.view" >
            <field name="name">super.stockist.mapping.view.form</field>
            <field name="model">super.stockist.mapping</field>
            <field name="arch" type="xml">
                <form string="SuperStockist Stockist Mapping">
                    <sheet>
                        <group>
                            <field name="super_partner_id" required="1"  domain="[('superstockist', '=', True)]" />
                        </group>
                        <notebook>
                            <page string="Stockist">
                                <field name="super_stockist_mapping_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="stockist_partner_id" nolabel="1" context="{'default_stockist': 1, 'partner_id': parent.super_partner_id}"
                                                domain="[('stockist', '=', True)]"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="super_stockist_mapping_view_tree" model="ir.ui.view" >
            <field name="name">super.stockist.mapping.view.tree</field>
            <field name="model">super.stockist.mapping</field>
            <field name="arch" type="xml">
                <tree string="SuperStockist Stockist Mapping">
                    <field name="super_partner_id"/>
                </tree>
            </field>
        </record>

        <record id="open_view_super_stockist_mapping" model="ir.actions.act_window">
            <field name="name">SuperStockist Stockist Mapping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">super.stockist.mapping</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="SuperStockist Stockist Mapping" action="open_view_super_stockist_mapping" id="menu_open_view_super_stockist_mapping" parent="menu_pharma_config" sequence="6"/>
        <!-- End -->

        <!-- Product Scheme master -->
        <record id="scheme_product_view_form" model="ir.ui.view" >
            <field name="name">scheme.product.view.form</field>
            <field name="model">scheme.product</field>
            <field name="arch" type="xml">
                <form string="Scheme Master">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <group>
                                <field name="date_start"/>
                            </group>
                            <group>
                                <field name="date_end"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Region">
                                <field name="scheme_region_ids">
                                    <tree editable="bottom">
                                        <field name="addsol_region_state_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Product">
                                <field name="scheme_product_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_scheme_product_tree" model="ir.ui.view" >
            <field name="name">view.scheme.product.tree</field>
            <field name="model">scheme.product</field>
            <field name="arch" type="xml">
                <tree string="Scheme Master">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="open_view_scheme_product" model="ir.actions.act_window">
            <field name="name">Scheme Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">scheme.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Scheme Master" id="menu_open_view_scheme_product" action="open_view_scheme_product"  parent="menu_pharma_config"  sequence="7"/>


        
    </data>
</openerp>