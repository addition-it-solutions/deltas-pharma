<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="addsol_res_partner_view_form" model="ir.ui.view">
            <field name="name">addsol.res.partner.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/group/group/field[@name='supplier']" position="after">
                    <field name="stockist"/>
                    <field name="chemist"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="addsol_dr_qualification_view_form">
            <field name="name">addsol.dr.qualification.view.form</field>
            <field name="model">dr.qualification</field>
            <field name="arch" type="xml">
                <form string="Qualification">
                    <group col="4">
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="addsol_dr_qualification_view_tree">
            <field name="name">addsol.dr.qualification.view.tree</field>
            <field name="model">dr.qualification</field>
            <field name="arch" type="xml">
                <tree string="Qualification">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="open_view_addsol_dr_qualification" model="ir.actions.act_window">
            <field name="name">Qualification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dr.qualification</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="addsol_dr_speciality_view_form">
            <field name="name">addsol.dr.speciality.view.form</field>
            <field name="model">dr.speciality</field>
            <field name="arch" type="xml">
                <form string="Speciality">
                    <group col="4">
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="addsol_dr_speciality_view_tree">
            <field name="name">addsol.dr.speciality.view.tree</field>
            <field name="model">dr.speciality</field>
            <field name="arch" type="xml">
                <tree string="Speciality">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="open_view_addsol_dr_speciality" model="ir.actions.act_window">
            <field name="name">Speciality</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dr.speciality</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="addsol_dr_view_form">
            <field name="name">addsol.dr.view.form</field>
            <field name="model">dr.details</field>
            <field name="arch" type="xml">
                <form string="Doctors">
                    <sheet>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" />
                        </h1>
                        <group>
                            <group>
                                <label for="street" string="Address"/>
                                <div>
                                    <field name="address1" placeholder="Street..."/>
                                    <field name="address2"/>
                                    <div class="address_format">
                                        <field name="city" placeholder="City" style="width: 40%%"/>
                                        <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)"/>
                                        <field name="zip" placeholder="ZIP" style="width: 20%%"/>
                                    </div>
                                    <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="region_id"/>
                            </group>
                            <group>
                                <field name="email" widget="email"/>
                                <field name="mobile"/>
                                <field name="birthdate"/>
                                <field name="visiting_time"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name='internal_notes' string="Internal Notes">
                                <field name="comment" placeholder="Put an internal note..."/>
                            </page>
                            <page string="Qualification">
                                <field name="qual_ids" nolabel="1"/>
                            </page>
                            <page string="Speciality">
                                <field name="spec_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="addsol_dr_view_tree">
            <field name="name">addsol.dr.view.tree</field>
            <field name="model">dr.details</field>
            <field name="arch" type="xml">
                <tree string="Doctors" >
                    <field name="name"/>
                    <field name="email"/>
                    <field name="mobile"/>
                </tree>
            </field>
        </record> 

        <record id="open_view_addsol_dr" model="ir.actions.act_window">
            <field name="name">Doctors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dr.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem sequence="150" id="menu_pharma_root" name="Pharma" groups="base.group_user"/>
        <menuitem id="menu_pharma_doctors" parent="menu_pharma_root" name="Doctors" sequence="1" />
        <menuitem name="Doctors" action="open_view_addsol_dr" id="menu_open_view_addsol_dr" parent="menu_pharma_doctors" sequence="1"/>
        <menuitem id="menu_pharma_config" parent="menu_pharma_root" name="Configuration" sequence="25" />
        <menuitem name="Qualification" action="open_view_addsol_dr_qualification" id="menu_open_view_addsol_dr_qualification" parent="menu_pharma_config" sequence="1"/>
        <menuitem name="Speciality" action="open_view_addsol_dr_speciality" id="menu_open_view_addsol_dr_speciality" parent="menu_pharma_config" sequence="2"/>


        <record id="addsol_mr_tour_plan_filter" model="ir.ui.view">
            <field name="name">addsol.mr.tour.plan.filter</field>
            <field name="model">mr.tour.plan</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <separator/>
                    <filter domain="[('state','in',('confirm',))]" string="To Approve" name="approve"/>
                </search>
            </field>
        </record>

        <record id="view_addsol_mr_tour_plan_calendar" model="ir.ui.view">
            <field name="name">MR Tour Plan</field>
            <field name="model">mr.tour.plan</field>
            <field name="arch" type="xml">
                <calendar string="MR Tour Plan" color="employee_id"
                            date_start="tour_date" date_stop="tour_date_to"
                          quick_add="False" avatar_model="hr.employee">
                    <field name="employee_id"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="addsol_mr_tour_plan_view_form">
            <field name="name">addsol.mr.tour.plan.view.form</field>
            <field name="model">mr.tour.plan</field>
            <field name="arch" type="xml">
                <form string="MR Tour Plan">
                    <header>
                        <button string="Submit" name="plan_send" states="draft" type="object" class="oe_highlight" />
                        <button string="Approve" name="plan_approve" states="confirm" type="object" class="oe_highlight" groups="base.group_addsol_asm,base.group_addsol_rsm"/>
                        <button string="Cancel" name="refuse" states="draft,confirm,validate" type="object"/>
                        <button name="reset" string="Reset to Draft" states="cancel" type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="employee_id" required="1" attrs="{'readonly': [('state','in',['validate','refused'])] }"/>
                        </group>
                        <group>
                            <field name="tour_date" required="1" attrs="{'readonly': [('state','in',['validate','refused'])] }"/>
                        </group>
                        <notebook>
                            <page string="Doctor">
                                <field name="product_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="dr_details_id"/>
                                        <field name="plan_line_product_id" widget="many2many_tags"/>
                                        <field name="notes" />
                                        <field name="sampling" />
                                        <field name="promotional" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Chemist">
                                <field name="chemist_partner_ids" nolabel="1" context="{'default_customer': 0, 'default_supplier': 0, 'default_stockist': 0, 'search_default_chemist': 1, 'default_chemist': 1}"
                                      domain="[('chemist', '=', True)]"/>
                            </page>
                            <page string="Stockist">
                                <field name="stockist_partner_ids" nolabel="1" context="{'default_customer': 0, 'default_supplier': 0, 'default_chemist': 0, 'search_default_stockist': 1, 'default_stockist': 1}"
                                      domain="[('stockist', '=', True)]"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_addsol_mr_tour_plan_tree">
            <field name="name">addsol.mr.tour.plan.tree</field>
            <field name="model">mr.tour.plan</field>
            <field name="arch" type="xml">
                <tree string="MR Tour Plan">
                    <field name="employee_id"/>
                    <field name="tour_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <menuitem name="Tour" parent="menu_pharma_root" id="menu_open_addsol_mr_tour" sequence="15"/>

        <record model="ir.actions.act_window" id="open_addsol_mr_tour_plan">
            <field name="name">MR Tour Plan</field>
            <field name="res_model">mr.tour.plan</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="addsol_mr_tour_plan_view_form"/>
            <field name="context">{'search_default_approve':1}</field>
            <field name="search_view_id" ref="addsol_mr_tour_plan_filter"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_open_addsol_mr_tour_plan_tree">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_addsol_mr_tour_plan_tree"/>
            <field name="act_window_id" ref="open_addsol_mr_tour_plan"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_open_addsol_mr_tour_plan_form">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="addsol_mr_tour_plan_view_form"/>
            <field name="act_window_id" ref="open_addsol_mr_tour_plan"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_open_addsol_mr_tour_plan_calendar">
            <field name="sequence" eval="1"/>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="view_addsol_mr_tour_plan_calendar"/>
            <field name="act_window_id" ref="open_addsol_mr_tour_plan"/>
        </record>

        <menuitem parent="menu_open_addsol_mr_tour" id="menu_open_addsol_mr_tour_plan" action="open_addsol_mr_tour_plan" sequence="1"/>

        <record model="ir.actions.act_window" id="request_approve_addsol_mr_tour_plan">
            <field name="name">Plan to Approve</field>
            <field name="res_model">mr.tour.plan</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_approve':1}</field>
            <field name="view_id" ref="addsol_mr_tour_plan_view_form"/>
            <field name="search_view_id" ref="addsol_mr_tour_plan_filter"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_request_approve_addsol_mr_tour_plan_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_addsol_mr_tour_plan_tree"/>
            <field name="act_window_id" ref="request_approve_addsol_mr_tour_plan"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_request_approve_holidays_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="addsol_mr_tour_plan_view_form"/>
            <field name="act_window_id" ref="request_approve_addsol_mr_tour_plan"/>
        </record>

        <menuitem name="Tour Plan to Approve" parent="menu_open_addsol_mr_tour" id="menu_request_approve_mr_tour_plan" action="request_approve_addsol_mr_tour_plan" groups="base.group_addsol_asm,base.group_addsol_rsm" sequence="2"/>


    </data>
</openerp>